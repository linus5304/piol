{
  "name": "piol",
  "version": "0.1.0",
  "private": true,
  "description": "Cameroon Housing Marketplace - Making home rental simple, transparent & trustworthy",
  "workspaces": ["apps/*", "packages/*"],
  "trustedDependencies": ["@biomejs/biome"],
  "scripts": {
    "dev": "turbo run dev --filter=@repo/web",
    "dev:all": "turbo run dev dev:convex --parallel",
    "dev:web": "turbo run dev --filter=@repo/web",
    "dev:mobile": "turbo run dev --filter=@repo/mobile",
    "dev:convex": "cd packages/convex && bunx convex dev",
    "convex:init": "bunx convex dev --once",
    "build": "turbo run build",
    "vercel:build": "node scripts/vercel-build.mjs",
    "lint": "turbo run lint",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "turbo run test",
    "test:convex": "cd packages/convex && bunx vitest run",
    "test:web": "cd apps/web && jest",
    "typecheck": "turbo run typecheck",
    "seed": "npx convex run seed:seed",
    "seed:reset": "npx convex run seed:reset",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "concurrently": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "turbo": "^2.3.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "convex": "^1.17.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "bun@1.2.0",
  "resolutions": {
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "@types/react": "19.2.7"
  }
}
